include ./_breadcrumb.pug

mixin app-main-header(data={page_url:"#", page_title: page_title || "", background_img: {src: ""}, breadcrumb: []})
	// application inner pages header
	header.app-main-header.section(role="header", aria-label="page header")
		if (data.background_img && data.background_img.src)
			.section__bg--image-container.section__fade.section__fade--primary-08
				img.section__bg--image(src=data.background_img.src, alt=`${page_title} banner`, role="presentation", data-paroller-factor="-0.05", data-paroller-type="foreground", data-paroller-direction="vertical")
		.app-main-header__content-wrapper
			section
				.container-fluid
					.row
						.col.col-12.col-sm-10.offset-sm-1.col-md-8.offset-md-2.col-lg-8.offset-lg-2
							.row
								if (data.page_title)
									.col.col-12
										h1.app-main-header__title=data.page_title
								if (data.breadcrumb && data.breadcrumb.length)
									.col.col-12
											+breadcrumb(data.breadcrumb)
	// application inner pages header end/.
